<Window x:Class="Matrice_di_bottoni.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Matrice_di_bottoni"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="gridWin">
        <TextBox x:Name="txtInput" HorizontalAlignment="Left" Margin="24,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnInput" Content="Inserisci" HorizontalAlignment="Left" Margin="171,41,0,0" VerticalAlignment="Top" Click="btnInput_Click"/>
        <Button x:Name="btnCrea" Content="Crea Matrice" HorizontalAlignment="Left" Margin="58,92,0,0" VerticalAlignment="Top" Click="btnCrea_Click"/>
        <Label Content="Numero di bottoni (deve essere un quadrato)" HorizontalAlignment="Left" Margin="24,15,0,0" VerticalAlignment="Top" Width="289"/>
        <Button x:Name="btnContent" Content="Content" HorizontalAlignment="Left" Margin="177,92,0,0" VerticalAlignment="Top" Click="btnContent_Click"/>

    </Grid>
</Window>
